<UserControl x:Class="otlob.UserControls.CartItemPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:otlob.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <DockPanel Background="White" Margin="10" MouseEnter="DockPanel_MouseEnter" MouseLeave="DockPanel_MouseLeave" Cursor="No">
        <StackPanel x:Name="CartItemInfoPanel" DockPanel.Dock="Left" Margin="5" Width="auto">
            <TextBlock x:Name="CartItemNameTextBlock" Margin="3"></TextBlock>
            <TextBlock x:Name="CartItemQuantityTextBlock" Margin="3"></TextBlock>
            <TextBlock x:Name="CartItemPriceTextBlock" Margin="3"></TextBlock>
            <TextBlock x:Name="CartItemTotalPriceTextBlock" Margin="3"></TextBlock>
        </StackPanel>
        
    </DockPanel>
</UserControl>
